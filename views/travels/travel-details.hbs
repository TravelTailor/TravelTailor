        </form>
    </ul>
      {{/each}}

      <a href="/travel-list/{{travel._id}}/create-task">â• Add a task and search</a>

               
            </div>
            
        </div>
    </div><!-- End: Bold BS4 Portfolio Item Details Page -->
    <!-- Start: Ludens - 4 Show Details -->
