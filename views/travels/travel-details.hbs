                <h3 style="color: darkred;">{{errorMessage2}}</h3>

{{#each tasks}}
    <ul>
        <li><b>{{this.task}}:</b></li>
        <li>{{formatDate this.date}}</li>
        <form action="/travel-list/{{../travel._id}}/edit-task/{{this._id}}" method="POST">
