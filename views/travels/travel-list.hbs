
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Travel List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/css/Animated-Pretty-Product-List-v12-Animated-Pretty-Product-List.css">
</head>

<body>
      <div class="container" style="margin-top: 90px;">

    <!-- Start: Animated Pretty Product List (v1.2) -->
        <!-- Start: Animated Pretty Product List -->
        <div class="row product-list dev">
            <!-- Start: Slide Top Left -->
              {{#each travels}}
            <div class="col-sm-6 col-md-4 product-item animation-element slide-top-left">
                <div class="product-container">
                    <div class="row">
                        <div class="col-md-12"><a class="product-image" href="#"><img src="{{travelImg}}"></a></div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <h2><a href="#">{{city}}</a></h2>
                        </div>
                        <div class="col-4"><a class="small-text" href="#">üè¥ {{country}}</a></div>
                    </div>
                    <div class="product-rating"><a class="small-text" href="#">üí∏ {{budget}}‚Ç¨</a></div>
                    <div class="row">
                        <div class="col-12">
                            <p class="product-description">  <p>Start date: {{formatDate startDate}} / End date: {{formatDate endDate}}</p> </p>
                            
                            <div class="row">
                              <div class="col-6"></div>
                                 <button id="myButton-{{_id}}" class="btn btn-light" type="button">Travel details!</button>
                               
                            
                            
                            
                            
                          

                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- End: Slide Top Left -->
            {{/each}} 

            <script>
{{#each travels}}
  document.getElementById('myButton-' + '{{_id}}').onclick = function() {
    window.location.href = "/travel-list/" + '{{_id}}';
  };
{{/each}}
</script>

        </div><!-- End: Animated Pretty Product List -->
    </div><!-- End: Animated Pretty Product List (v1.2) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/Animated-Pretty-Product-List-v12-Animated-Pretty-Product-List.js"></script>
</body>

</html>





