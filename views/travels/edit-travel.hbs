<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>edit travel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
</head>

<body style="margin-top: 77px;">
    <!-- Start: Ludens - Create-Edit Form -->
    <div class="container-fluid"><a class="btn btn-link link-primary mb-3" role="button" href="/travel-list/{{travel._id}}"><i class="fas fa-arrow-left"></i>&nbsp;Back</a>
        <div class="d-sm-flex justify-content-between align-items-center mb-4">
            <h3 class="text-dark mb-0">Edit Travel</h3>
        </div>
        <form action="/travel-list/{{travel._id}}/edit" method="POST">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Fill in the required fields *</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>City *</strong></label><input class="form-control" type="text" id="city" value="{{travel.city}}" name="city" required=""></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3"><label class="form-label" for="service_price"><strong>Budget *</strong></label><input class="form-control" type="text" id="budget" value="{{travel.budget}}" name="budget" required=""></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Country *</strong></label><input class="form-control" type="text" id="country" value="{{travel.country}}" name="country" required=""></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Travel Picture *</strong></label><input class="form-control" type="text" id="travelImg" value="{{travel.travelImg}}" name="travelImg" required=""></div>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="service_client_start_date"><strong>Start date *</strong></label><input class="form-control" id="startDate" type="date" name="startDate" required="" value="{{formatDate travel.startDate}}"></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="service_client_end_date"><strong>End date *</strong><br></label><input class="form-control" id="endDate" type="date" name="endDate" required="" value="{{formatDate travel.endDate}}"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-end mb-3"><button class="btn btn-primary btn-lg" type="submit">Edit</button><a class="btn btn-danger btn-lg" role="button" href="/travel-list/{{travel._id}}">Cancel</a></div>
        </form>
    </div><!-- End: Ludens - Create-Edit Form -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>