 <!-- Start: Ludens Users - 1 Login -->
    <section class="text-bg-dark login-clean" style="background-color: transparent;font-family: Poppins, sans-serif;">
        <form method="post" style="margin-top: 40px;" action="/signup">
            <center><h2 >Register</h2></center>
            <div class="illustration"><i class="icon ion-ios-navigate" style="color: #00b5a8;"></i></div><a class="forgot" href="/login">Already registered, click here!</a>
                        <div class="form-group mb-3"><input class="form-control" name="username" placeholder="Username"></div>
            <div class="form-group mb-3"><input class="form-control" type="email" name="email" placeholder="email"></div>
            <div class="form-group mb-3"><input class="form-control" type="password" name="password" placeholder="Password"></div>
            <div class="form-group mb-3"><button class="btn btn-primary d-block w-100" type="submit" style="background-color: #00b5a8;">Sign Up</button></div><a class="forgot" href="/login">Already registered, click here!</a>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
        </form>
        
    </section><!-- End: Ludens Users - 1 Login -->
